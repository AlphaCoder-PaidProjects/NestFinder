<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nest Finder</title>
    <link rel="stylesheet" href="/home.css">
</head>

<body>
    <div class="container">
        <header class="header">
            <nav class="nav">
                <div class="logo">
                    <img class="logo-circle" src="/assets/img/Shicon.webp" alt="Logo">
                    <h1>Nest Finder</h1>
                </div>
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="#search" id="search-link">Search</a>
                    <a href="/aboutus">About Us</a>
                    <a href="/auth/login">Login</a>
                    <a href="/auth/register">SignUp</a>
                </div>
            </nav>
            <form action="/searchproperties" method="post">
                <div class="search-section">
                    <div class="search-box">
                        <div class="searchtext">
                            <label for="">Search_By</label>
                        </div>
                        <select class="search-dropdown" name="criteria">
                            <option value="">Select</option>
                            <option value="city">City</option>
                            <option value="rooms">Number of Bedrooms(BHK)</option>
                            <option value="rent">Max-Rent</option>
                        </select>
                        <input type="text" id="search" class="search-input" name="searchvalue" placeholder="Search properties...">
                        <button class="search-btn">Search</button>
                        <a href="/" class="search-btn">Reset</a>
                    </div>
                </div>
            </form>
        </header>
        <div class="all-properties">
            <label for="">All Properties</label>
        </div>
        <main class="properties-section">
            <!-- Property cards will be dynamically inserted here -->
            {{#if approvedproperties}}
            {{#each approvedproperties}}
            <div class="property-card">
                <img src="{{this.images.[0]}}" alt="Modern Family Home" class="property-image">
                <div class="property-info">
                    <div class="property-title">{{this.title}}</div>
                    <div class="property-details">{{this.bedrooms}} bedrooms â€¢ {{this.bathrooms}} bathrooms
                    </div>
                    <div class="property-title">Rent:{{this.rent}}</div>
                    <div class="property-title">Deposit:{{this.deposit}}</div>
                    <button class="property-btn" onclick="window.location.href='/viewdetails'">View
                        Details</button>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="no-properties">
                <h2>No Properties Found</h2>
            </div>
            {{/if}}
        </main>
    </div>
    <script>
        document.getElementById('search-link').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent default anchor behavior
            const searchInput = document.getElementById('search');
            searchInput.focus(); // Focus on the input field
        });

    </script>
</body>

</html>